{
  "name": "embed-iframe-example",
  "type": "web",
  "version": "0.0.49",
  "description": "Embed iFrame Message Passing Example",
  "provide": ["ui:menu"],
  "icon": "fas fa-cat-space",
  "display_name": "iFrame Message Passer Example",
  "module": {
    "dsr": {
      "enabled": true
    },
    "canvas": {
      "enabled": true,
      "auto_install": false,
      "shortcuts": {
        "fullscreen": [
          {
            "id": "iframe-passer",
            "icon": "fas fa-cat-space",
            "order_override": 200
          }
        ],
        "presentation": [
          {
            "id": "iframe-passer",
            "icon": "fas fa-cat-space",
            "order_override": 200
          }
        ]
      },
      "settings": {
        "sections": [
          {
            "label": "Settings",
            "fields": [
              {
                "type": "text",
                "name": "url",
                "label": "iFrame URL",
                "help_text": "Provide a URL for the iFrame. Use Handlebars syntax like {{SelectedAccount.Name}} to inject canvas context values. Example: https://www.google.com/search?q={{SelectedAccount.Name}}"
              }
            ]
          }
        ]
      },
      "defaults": {
        "dimensions": {
          "width": "100%",
          "height": "1000px"
        }
      }
    }
  }
}
